<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/last_operation_text_view"
        android:layout_gravity="fill_horizontal"
        android:gravity="end"
        android:layout_column="1"
        android:layout_columnSpan="3"
        tools:text="25 + 48"
        android:textSize="20sp"
        android:textColor="@color/grey_text"/>

    <Button
        android:id="@+id/clear_all_button"
        android:text="C"
        android:textSize="30sp"
        android:backgroundTint="@color/red" />

    <TextView
        android:id="@+id/input_text_view"
        android:layout_gravity="fill_horizontal"
        android:gravity="end"
        android:layout_column="1"
        android:layout_columnSpan="3"
        tools:text="123456"
        android:textSize="32sp"
        android:textColor="@color/grey_text"/>

    <Space
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/reverse_button"
        android:text="+/-"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations" />

    <Button
        android:id="@+id/multiply_button"
        android:text="*"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations"/>

    <Button
        android:id="@+id/divide_button"
        android:text="/"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations"/>

    <ImageButton
        android:id="@+id/backspace_button"
        android:src="@drawable/ic_baseline_backspace_24"
        android:layout_width="match_parent"
        android:layout_gravity="fill_horizontal|fill_vertical"
        android:backgroundTint="@color/grey_operations"/>

    <Button
        android:id="@+id/seven_button"
        android:text="7"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/eight_button"
        android:text="8"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/nine_button"
        android:text="9"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/minus_button"
        android:text="-"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations"/>

    <Button
        android:id="@+id/four_button"
        android:text="4"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/five_button"
        android:text="5"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/six_button"
        android:text="6"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/plus_button"
        android:text="+"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations"/>

    <Button
        android:id="@+id/one_button"
        android:text="1"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/two_button"
        android:text="2"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/three_button"
        android:text="3"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/equals_button"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="2"
        android:text="="
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations"/>

    <Button
        android:id="@+id/percent_button"
        android:text="%"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations"/>

    <Button
        android:id="@+id/zero_button"
        android:text="0"
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_numbers"/>

    <Button
        android:id="@+id/point_button"
        android:text=","
        android:textSize="30sp"
        android:textColor="@color/grey_text"
        android:backgroundTint="@color/grey_operations"/>

</GridLayout>